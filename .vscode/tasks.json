{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "go",
            "args": [
                "build",
                "-o",
                "${workspaceFolder}/backend/backend.exe" // 假设你的工作区就是 main.go 所在的目录  
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "options": {
                "cwd": "${workspaceFolder}/backend" // 设置当前工作目录为backend  
            },  
            "problemMatcher": []
        },
    ]
}